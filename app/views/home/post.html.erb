<% content_for :page_title do -%>
<%= @post.title.html_safe %>
<% end -%>

<% content_for :meta_keywords do -%>
<%= @post.meta_keywords.try(:html_safe) %>
<% end -%>

<% content_for :meta_description do -%>
<%= @post.meta_description.try(:html_safe) %>
<% end -%>

<% entry = exhibit(@post.postable, self) -%>
<%= entry.render_body %>


